@model WebRestoran.Models.Ingredient

@{
    ViewData["Title"] = "Ingredient Details";
}

<h1 class="mb-4">Ingredient Details</h1>

<div>
    <h2>@Model.IngredientName</h2>
    <h3>Associated Foods</h3>
    @if (Model.FoodIngredients == null || !Model.FoodIngredients.Any())
    {
        <p class="alert alert-warning">No foods found for this ingredient.</p>
    }
    else
    {
        <table class="table table-bordered table-striped text-center">
            <thead class="table-dark">
                <tr>
                    <th>Food ID</th>
                    <th>Food Name</th>
                    <th>Description</th>
                    <th>Price (€)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var foodIngredient in Model.FoodIngredients)
                {
                    <tr>
                        <td>@foodIngredient.Food.FoodId</td>
                        <td>@foodIngredient.Food.FoodName</td>
                        <td>@foodIngredient.Food.Description</td>
                        <td>@foodIngredient.Food.Price.ToString("0.00") €</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>